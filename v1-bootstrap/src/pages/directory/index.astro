---
import Industries from '../../data/Industries';
// Example: src/pages/index.astro
import MySiteLayout from '../../layouts/SiteLayout.astro';
import herobg from "@assets/assets/images/banners/banner1.jpg"

---
<MySiteLayout>
        <section class="hero-section  container-fluid position-relative  bg-background opacity-50" style={`background:url(${herobg}) center center`  } >
          <div class="banner-1 cover-image sptb-2" data-bs-image-src={herobg} style={`background:url(${herobg}) center center`  } data-select2-id="18">
    <div class="header-text1 mb-0" data-select2-id="17">
        <div class="container" data-select2-id="16">
            <div class="row" data-select2-id="15">
                <div class="col-xl-9 col-lg-12 col-md-12 d-block mx-auto" data-select2-id="14">
                    <div class="text-center text-white font-bold"><h1 class="">
Fastest Service Business Directory in the World</h1></div>
<div class="text-center text-white"><h5 class="">
Discover businesses near you with ratings and reviews
</h5></div>
                </div>
            </div>
        </div>
    </div>
  
</div>
</section>
        <section class="slider-section categories-slider">
            <div class="slider-container container p-0">
                <div id="slider-2" class="slider d-none d-lg-block">
                    <div class="slider__slides">
                    {Industries.map((item) => {
                        return (
                        <div class="slider__slide"  >
                           <a href={"/directory/" + item.cleanUrl + '-search.html'  } class="tag">{item.name}</a>
                        </div>
                        )
                    })}

                    </div>

                    <div class="slider__buttons">
                        <a href="#" class="slider__button--prev">
                          <i class="fa-solid fa-angle-left"></i>
                        </a>
                        <a href="#" class="slider__button--next">
                          <i class="fa-solid fa-angle-right"></i>
                        </a>
                    </div>
                </div>
<section class="d-lg-none  mb-2">
            <p class=" d-lg-none mt-3 select-categories">
            <a class="select-box d-flex align-items-center justify-content-between w-100 text-lg" data-bs-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
            <span>Select Categories</span>
                    <i class="fa-solid fa-angle-down"></i>
            </a>

            </p>
            <div class="collapse" id="collapseExample">
            <div class=" list-group ">
            { Industries.map(item => {
                return (
                    
                     <a  href={"/directory" +  item.cleanUrl + '-search.html'  } class="list-group-item list-group-item-action">
                     
                       {item.name}
                     
                     </a>
                    

                )
            })}
            </div>
            </div>
</section>


            </div>
        </section>

<section class="my-5">
     <div class="container">
       <div class="row">
       <div class="col-xl-6 col-md-6 m-0 p-0"> <div class="card"> <div class="item-card">
        <div class="item-card-desc">
        <a href="#"></a> <div class="item-card-img">
         <img src={herobg} alt="img" class="br-te-7 br-ts-7"> </div>
          <div class="item-card-text">
          
        </div>
            </div>
            </div>
            </div>
            </div>

           <div class="col-xl-6 col-md-6 m-0 p-0 "> 
           <div class="card px-0 mx-0"> 
           
            <div class="item-card">
                    <div class="item-card-desc">
                            <a href="#"></a>
                            <div class="item-card-img">
                            <img src={herobg} alt="img" class="br-te-7 br-ts-7"> 
                            </div>
                            <div class="item-card-text">
                            
                            </div>
                   </div>
            </div>
       </div>
            </div>
       </div>
     </div>
</section>

        <section class="industries-section">
            <div class="container">
                <div class="d-flex align-items-center justify-content-center industries-bar">
                    <div class="heading text-center">
                        <h2 class="font-w-700 h1">Search By Service Category</h2>
                        <p class="h5">Discover businesses near you with ratings and reviews</p>
                    </div>
                    
                </div>
                <div class="slider-section industries-slider d-none d-lg-block">
                    <div class="slider-container container p-0">
                        <div id="slider-4" class="slider">
                            <div class="slider__slides">
                            {Industries.map(item=> {
                                return (
                                <div class="slider__slide">
                                   <a href={"/directory/" + item.cleanUrl + '-search.html'  }  class="industries-box">
                                        <img src={item.image}>
                                        <div class="industries-text text-center">{item.name}</div>
                                    </a>
                                </div>
                                )
                            })}
                                
                            </div>

                            <div class="slider__buttons">
                                <a href="#" class="slider__button--prev">
                                  <i class="fa-solid fa-angle-left"></i>
                                </a>
                                <a href="#" class="slider__button--next">
                                  <i class="fa-solid fa-angle-right"></i>
                                </a>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="row d-lg-none">
                 {Industries.map(item=> {
                                return (
                            <div class="col-lg-3">
                       <a href={"/directory/" +  item.cleanUrl + '-search.html'  }  class="industries-box">
                                        <img src={item.image}>
                                        <div class="industries-text">{item.name}</div>
                 </a>
                    </div>
                               
                                )
                            })}

                </div>

                
            </div>
        </section>


</MySiteLayout>